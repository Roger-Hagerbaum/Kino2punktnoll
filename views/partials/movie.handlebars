<div class='container'>
  <div class='card m-2'>
    <h1 class='card-header'>{{movie.attributes.title}}</h1>
    <img class='card-img-top' src='{{{movie.attributes.image.url}}} 'alt= "Movie poster for {{ movie.attributes.title }}" />
    <div class='card-body'>
      <div class='rating'></div>
      <p class='card-text'> {{{movie.attributes.intro}}}</p>
    </div>
  </div>

  <div class='container p-2'>
    <form action='' method='post' id='postForm'>
      <div class='form-group'>
        <label for='namePostReviewForm'>Namn</label>
        <input
          type='name'
          class='form-control'
          id='namePostReviewForm'
          placeholder='John Doe'
          value=''
          
        />
        <input type='hidden' name='movie' value='{{movie.id}}' />
      </div>
      <div class='form-group'>
        <label for='ratingPostReview'>Välj betyg 1-5</label>
        <select class='form-control' id='ratingPostReview'>
          <option>0</option>
          <option>1</option>
          <option>2</option>
          <option>3</option>
          <option>4</option>
          <option>5</option>
        </select>
      </div>
      <div class='form-group'>
        <label for='commentPostReview'>Lämna kommentar</label>
        <textarea
          class='form-control'
          id='commentPostReview'
          rows='3'
          
        ></textarea>
      </div>
      <input type='submit' />
    </form>
  </div>
  
<div class='boxForScreenings'>
  <h1>Kommande visningar: </h1>
  <ul id='listOfScreenings'>
  </ul>
</div>
  <h1>Reviews</h1>
    <div class="reviews"></div>
  </div>
</div>
<script type="module" src='../../static/postreviews.js'></script>
<script src='../../static/u_screenings.js'></script>
<script src='../../static/generateRates.js'></script>
<script type="module" src="../../static/movieReviews.js"></script>
